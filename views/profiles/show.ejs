<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <% if (profile.avatar) { %>
    <div>
      <img 
        class="profile-avatar"
        src="<%= profile.avatar %>" 
        alt="<%= profile.name %> avatar"
      >
    </div>
  <% } %>

  
  <h1><%= isSelf ? "Your Profile" : `${profile.name}'s Profile` %></h1>
  
  <h2>Projects</h2>
  <div class="projects">
    <ul>
    <% projects.forEach(project => { %>
      
        <a href="/projects/<%= project.id %>" class="pj-title"> <%= project.name %></a> <br>
        <p> Current Status: <%= project.completed ? "Completed" : "Incomplete" %> </p>
      
    <%}) %> 
    </ul>
    </div>

</main>

<%- include('../partials/footer') %>